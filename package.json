{
  "name": "booktome",
  "version": "1.0.0",
  "description": "Book tome app",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev-backend": "cd backend && npm run dev",
    "dev": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"bgBlue.bold,bgGreen.bold\" --timestamp-format \"HH:mm:ss\" --kill-others-on-fail \"npm run dev-backend\" \"npm run dev-frontend\"",
    "dev-frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "node backend/dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sadjoaldi/booktome.git"
  },
